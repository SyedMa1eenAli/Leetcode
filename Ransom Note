class Solution {
public:
    bool canConstruct(string ransomNote, string magazine) {
        int count[26] = {0};
        
        // Count the frequency of each character in magazine
        for (char c : magazine) {
            count[c - 'a']++;
        }
        
        // Check if ransomNote can be constructed
        for (char c : ransomNote) {
            if (--count[c - 'a'] < 0) {
                return false;
            }
        }
        
        return true;
    }
};
