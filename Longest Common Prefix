class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        if (strs.empty()) return "";
        
        string prefix = "";
        for (int i = 0; ; i++) {
            if (i >= strs[0].size()) break;
            char c = strs[0][i];
            for (const auto& str : strs) {
                if (i >= str.size() || str[i] != c) return prefix;
            }
            prefix += c;
        }
        return prefix;
    }
};
