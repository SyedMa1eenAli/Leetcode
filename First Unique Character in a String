class Solution {
public:
    int firstUniqChar(string s) {
        // Create a frequency map for characters in the string
        unordered_map<char, int> count;
        for (char c : s) {
            count[c]++;
        }
        
        // Find the first character with count 1
        for (int i = 0; i < s.size(); i++) {
            if (count[s[i]] == 1) {
                return i;
            }
        }
        
        return -1; // No unique character found
    }
};
